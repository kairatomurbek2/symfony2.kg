{% extends'::base.html.twig' %}
{% block title %}Task list{% endblock %}
{% block body %}
    <h1>
        Task list
        <a href="{{ path('add') }}" class="btn btn-primary pull-right">
            <i class="glyphicon glyphicon-log-in"></i>
            Add task
        </a>
    </h1>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Status</th>
            <th>link</th>
        </tr>
        </thead>
        <tbody>
        {% for task in tasks %}
        <tr>
            <th scope="row">{{ task.Id }}</th>
            <td>{{ task.Title }}</td>
            <td>{% if task.status %} выполнена {% else %} не выполнена {% endif %} </td>
            <td><a href="{{path('showTask',{'id':task.Id }) }} " class="btn btn-primary">сюда</a></td>
        </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}